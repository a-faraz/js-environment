{
  "name": "js-environment",
  "version": "1.0.0",
  "description": "JavaScript development environment Pluralsight course by Cory House",
  "main": "server.js",
  "scripts": {
    "prestart": "babel-node server/start-message.js",
    "start": "npm-run-all --parallel open:server lint:watch test:watch start-mockapi",
    "open:server": "babel-node server/server.js",
    "lint": "esw webpack.config.* client server",
    "lint:watch": "npm run lint -- --watch ",
    "test": "mocha --reporter progress server/test-setup.js \"client/**/*.test.js\"",
    "test:watch": "npm run test -- --watch",
    "localtunnel": "lt --port 3000",
    "share": "npm-run-all --parallel start localtunnel",
    "generate-mock-data": "babel-node server/generate-mock-data",
    "prestart-mockapi": "npm run generate-mock-data",
    "start-mockapi": "json-server --watch client/api/db.json --port 3001",
    "clean-dist": "rimraf ./dist && mkdir dist",
    "prebuild": "npm-run-all clean-dist test lint",
    "build": "babel-node server/build.js",
    "postbuild": "babel-node server/dist-server.js"
  },
  "author": "a-faraz",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-preset-latest": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chalk": "^2.4.1",
    "cheerio": "^1.0.0-rc.2",
    "compression": "^1.7.2",
    "cross-env": "^5.2.0",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-plugin-import": "^2.12.0",
    "eslint-watch": "^3.1.5",
    "express": "^4.16.3",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "faker": "^4.1.0",
    "html-webpack-plugin": "^3.2.0",
    "jsdom": "^11.11.0",
    "json-schema-faker": "^0.5.0-rc15",
    "json-server": "^0.14.0",
    "localtunnel": "^1.9.0",
    "mocha": "^5.2.0",
    "nock": "^9.3.3",
    "npm-run-all": "^4.1.3",
    "nsp": "^3.2.1",
    "numeral": "^2.0.6",
    "open": "0.0.5",
    "rimraf": "^2.6.2",
    "style-loader": "^0.21.0",
    "webpack": "^4.12.0",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.22.2",
    "webpack-md5-hash": "0.0.6",
    "whatwg-fetch": "^2.0.4"
  }
}
